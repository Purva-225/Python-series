
"""LOOPS"""

"""PRINT NUM FROM 1 TO 100"""
i = 1
while i <= 100:
    print(i)
    i +=1

"""print num from 100 to 1"""
i = 100
while i >= 1: 
  print(i)
  i-= 1
  
  """Multiplication table of a num entered by user"""
nums = int(input("Enter a number: "))
i =1
while i<=10:
     print(nums*i)
     i += 1

"""print elements in following list uses a loop [1,4,9,16,36,49,64,81,100]"""

nums =  [1,4,9,16,36,49,64,81,100]
idx = 0
while idx <len(nums):
    print(nums[idx])
    idx += 1

    nums = (1,4,916,36,49,64,81,100)


"""Search num X in following tuple using For loop (1,4,916,36,49,64,81,100)"""
nums (1,4,916,36,49,64,81,100)
x = 81
i = 0
while i < len(nums):
    if(nums[i]==x):
      print("Found at idx",i)
    else:
        print("Finding...")
    i += 1
        
"""BREAK STATEMENT"""
nums = (1,4,916,36,49,64,81,100)
x = 81
i = 0
while i < len(nums):
    if(nums[i]==x):
      print("Found at idx",i)
      break
    else:
        print("Finding...")
    i += 1
    
print("end of loop")

"""CONTINUE STATEMENT"""
nums = (1,4,916,36,49,64,81,100)
x = 81
i = 0
while i < len(nums):
    if(nums[i]==x):
      print("Found at idx",i)
      continue
    else:
        print("Finding...")
    i += 1
    
print("end of loop")

"""For loop"""    
nums = [1,2,3,4,5]
    
for val in nums:
    print(val)

"""STRING in loop """
name = "PURVA"

for char in name:
    print(char)
    
    nums = [2,3,4,5,67,8,6]

